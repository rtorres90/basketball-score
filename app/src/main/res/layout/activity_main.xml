<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Basketball Score"
            android:textSize="30sp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <TextView
            android:id="@+id/first_team_label"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese primer nombre de equipo"
            />

        <EditText
            android:id="@+id/first_team_edit"
            android:layout_below="@id/first_team_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/second_team_label"
            android:layout_below="@id/first_team_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese segundo nombre de equipo"
            />

        <EditText
            android:id="@+id/second_team_edit"
            android:layout_below="@id/second_team_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_team_edit"
            android:layout_marginTop="10dp"
            android:text="Comenzar!"
            />

    </RelativeLayout>
</layout>